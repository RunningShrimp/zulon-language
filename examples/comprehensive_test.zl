# Comprehensive test suite for ZULON testing framework

// Basic assertion test
#[test]
fn test_basic_assertion() {
    let x = 42
    assert!(x > 0)
}

// Equality assertion test
#[test]
fn test_equality() {
    let result = 2 + 2
    assert_eq!(result, 4)
}

// Inequality assertion test
#[test]
fn test_inequality() {
    let a = 10
    let b = 20
    assert_ne!(a, b)
}

// Test with multiple assertions
#[test]
fn test_multiple_assertions() {
    let value = 100
    assert!(value > 0)
    assert_eq!(value, 100)
    assert_ne!(value, 0)
}

// Ignored test (should not run by default)
#[test]
#[ignore]
fn test_ignored() {
    // This test is slow and should be ignored
    let mut sum = 0
    for i in 0..10000 {
        sum = sum + i
    }
    assert_eq!(sum, 49995000)
}

// Normal function (should not be discovered as test)
fn helper_function(x: i32) -> i32 {
    x * 2
}

// Test using helper function
#[test]
fn test_with_helper() {
    let result = helper_function(21)
    assert_eq!(result, 42)
}
